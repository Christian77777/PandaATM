<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cute_panda_paws_up_wall_panda_face_cartoon_icon_42750_498"
    tools:context=".loginScreen">

    <ImageView
        android:id="@+id/logoName4"
        android:layout_width="56dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/mutant_bamboo"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="55dp" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="75dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/pandalogo2"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-27dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIN:"
        android:textColor="#111111"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/clearButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B12525"
        android:text="Clear"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/backToMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="Back To Map"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33CC33"
        android:text="Login"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="302dp" />

    <EditText
        android:id="@+id/cardNumField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/pinNumField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number:"
        android:textColor="#111111"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="133dp" />

</androidx.constraintlayout.widget.ConstraintLayout>